<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.leaf.admin.sys.mapper.SysMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.leaf.admin.sys.entity.SysMenu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="order_no" property="orderNo"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="is_frame" property="isFrame"/>
        <result column="is_cache" property="isCache"/>
        <result column="type" property="type"/>
        <result column="visible" property="visible"/>
        <result column="status" property="status"/>
        <result column="permission" property="permission"/>
        <result column="icon" property="icon"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , name, parent_id, order_no, path, component, is_frame, is_cache, type, visible, status, permission, icon, create_by, create_time, update_by, update_time, remark
    </sql>

    <delete id="deleteRoleMenuByMenuId">
        delete
        from t_sys_role_menu
        where menu_id = #{menuId}
    </delete>

    <select id="selectByRoleId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu
        where id in (select menu_id from t_sys_role_menu where role_id = #{roleId})
    </select>
    <select id="selectByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_sys_menu
        where id in (SELECT DISTINCT
        rm.menu_id
        FROM
        t_sys_user_role ur
        LEFT JOIN t_sys_role_menu rm
        ON ur.role_id = rm.role_id
        WHERE ur.user_id = #{userId})
    </select>

    <select id="selectMenuIdsByRoleId" resultType="java.lang.Long">
        SELECT menu_id
        FROM t_sys_role_menu
        WHERE role_id = #{roleId}
    </select>
    <select id="selectMenuIdsByUserId" resultType="java.lang.Long">
        SELECT DISTINCT rm.menu_id
        FROM t_sys_user_role ur
                 LEFT JOIN t_sys_role_menu rm
                           ON ur.role_id = rm.role_id
        WHERE ur.user_id = #{userId}
    </select>
</mapper>